<!DOCTYPE html>
<html>
<head>
    <title>Supplies List</title>
    <style>
        /* Add some basic styling for the table */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid black;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }

        img {
            max-width: 100px;
        }
    </style>
</head>
<body>
  <% if (event) { %>
   
      
    <h1>All Supplies</h1>
    <% } %>

    <!-- Add the search form -->
    <form action="/addinsupplies/<%= event.id %>" method="get">
      <label for="search">Search:</label>
      <input type="text" id="search" name="search" value="<%= searchTerm %>" placeholder="Search from place">
      <input type="submit" value="Search">
    </form>
    

    
    <table>
        <tr>
            <th>Name</th>
            <th>Image</th>
            <th>Description</th>
            <th>Category</th>
            <th>Sub Category</th>
            <th>Country</th>
            <th>Region</th>
            <th>City</th>
            <th>Quantity</th>
            <th>Rate</th>
        </tr>
        <% supplies.forEach(supply => { %>
            <tr>
                <td><%= supply.name %></td>
                <td><img src="<%= supply.image %>" alt="<%= supply.image %>"></td>
                <td><%= supply.description %></td>
                <td><%= supply.category %></td>
                <td><%= supply.sub_category %></td>
                <td><%= supply.country %></td>
                <td><%= supply.region %></td>
                <td><%= supply.city %></td>
                <td><%= supply.quantity %></td>
                <td><%= supply.rate %></td>
            </tr>
        <% }); %>
    </table>
</body>
</html>
